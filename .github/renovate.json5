{
    "extends": [
        "config:base"
    ],

    "pip_requirements": {
        "fileMatch": ["requirements.*\.txt$"]
    },

    "labels": [
        "renovate"
    ],

    "dependencyDashboard": true,

    "schedule": [
        "before 1am on Saturday"
    ],

    "packageRules": [
        {
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "groupName": "all non-major dependencies",
            "groupSlug": "all-minor-patch"
        }
    ]
}
